@{
}

@model Category;

<div class="col-md-3 mt-2">
    <div class="card">
        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="@Model.CategoryName">
        <div class="card-body">
            <h5 class="card-title">@Model.CategoryName</h5>
            <a href="@Url.Action("Index","Auction",new { categoryid = Model.Id})" class="btn btn-outline-primary">Shop Now</a>
        </div>
    </div>
</div>